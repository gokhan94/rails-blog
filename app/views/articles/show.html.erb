<h2 align="center">Title: <%= @article.title %></h2>

<div class="col-12 col-md-8">

	<h4 class="center description"><strong>Description:</strong></h4>
	<hr>
	<%= simple_format(@article.description) %>
	<div class="article-actions">
	<%= link_to "Edit to Article ", edit_article_path(@article), class: "btn btn-xs btn-primary" %> 
	<%= link_to "Delete this article", article_path(@article), method: :delete, 
                                          data: { confirm: "Are you sure you want to delete this article?" }, 
                                          class: "btn btn-xs btn-danger" %>
	<%= link_to "Article Listing", articles_path, class: "btn btn-xs btn-success" %>		
	</div>
</div>	

<div class="col-6 col-md-4">
	<% if @article.user %>
	 <ul class="listing">
      <div class="row">  
          <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
          <li class="article-title">
            <%= link_to @article.user.username, user_path(@article.user) %>
          </li>
          <li>
          	<small>
          <%= pluralize(@article.user.articles.count, "article") if @article.user.articles %>
          	</small>
          </li>
        
            <li>
            	<%= link_to "Delete this user", user_path(@article.user), method: :delete, data: {confirm: "Are you sure?"} %>           	
            </li>
      </div>
    </ul>
    <% end %>
</div>